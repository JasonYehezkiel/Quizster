<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/progress_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/progress_card_background"
        android:padding="12dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_quiz_progress"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/progress_icon"/>

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz_progress"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="240dp"
        android:text="@string/quiz_text"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/question_background"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_below="@+id/tvQuestions"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/btnTrue"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:text="@string/btn_true" />

        <Button
            android:id="@+id/btnFalse"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:text="@string/btn_false"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_above="@+id/btnHelp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <ImageButton
        android:id="@+id/btnHelp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_help"
        android:contentDescription="@string/btn_help"
        android:backgroundTint="@color/light_blue"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>